!!! 5
%html
%head
	%meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
	%meta{charset: 'utf-8'}
	%meta{content:'width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0', name:"viewport"}

	%meta{name: 'theme-color', content: '#F44336'}
	%link{rel: 'icon', sizes: '192x192', type: 'image/png', href: 'images/logo/192.png'}
	%link{rel: 'shortcut icon', type: 'image/ico', href:'images/logo/favicon.ico'}

	%meta{name: 'keywords', content: 'simpler-sidebar, simpler sidebar, simple, simpler, sidebar, jquery, javascript, plugin, jquery plugin, dcdeiv, davidedc, sidebar left, sidebar right'}
	%meta{name: 'description', content: 'A simple side nav in jQuery'}
	%meta{name: 'language', content: 'en'}
	%meta{name: 'author', content: 'Davide Di Criscito'}
	%meta{name: 'owner', content: 'Davide Di Criscito'}
	%meta{name: 'coverage', content: 'Global'}
	%meta{name: 'rating', content: 'General'}
	%meta{name: 'target', content: 'all'}
	%meta{name: 'HandheldFriendly', content: 'True'}
	%meta{name: 'url', content: 'http://dcdeiv.github.io/simpler-sidebar'}
	%meta{name: 'identifier-URL', content: 'http://dcdeiv.github.io/simpler-sidebar'}

	%title= current_page.data.title || 'simpler-sidebar'

	%link{rel:'stylesheet', type: 'text/css', href: 'https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css'}
	%link{rel:'stylesheet', type: 'text/css', href: 'http://fonts.googleapis.com/css?family=Roboto:400,300,500,700|Roboto+Condensed:400,700,300|Roboto+Mono:400,700'}
	%link{rel:'stylesheet', type: 'text/css', href: 'http://cdn.materialdesignicons.com/1.4.57/css/materialdesignicons.min.css'}
	%link{rel:'stylesheet', type: 'text/css', href: 'http://yui.yahooapis.com/pure/0.6.0/pure-min.css'}

	= stylesheet_link_tag :main

	/[if lte IE 8]
		%link{rel:'stylesheet', type: 'text/css', href:'http://yui.yahooapis.com/combo?pure/0.6.0/base-min.css&pure/0.6.0/grids-min.css&pure/0.6.0/grids-responsive-old-ie-min.css'}
	/[if gt IE 8]
		%link{rel:'stylesheet', type: 'text/css', href:'http://yui.yahooapis.com/combo?pure/0.6.0/base-min.css&pure/0.6.0/grids-min.css&pure/0.6.0/grids-responsive-min.css'}
	/[if lt IE 9]
		%script{src: 'https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js'}

%body
	.toolbar
		#toolbar.toolbar-fixed.pure-g{:class => ("toolbar-rtl" if current_page.data.align == 'left')}
			.pure-u-5-8
				.title
					%a{href: "http://dcdeiv.github.io/simpler-sidebar"} simpler-sidebar
			.toolbar-nav-icons.pure-u-3-8
				%nav
					%ul
						%li.icon
							%a{href: "https://www.github.com/dcdeiv/simpler-sidebar", target: "_blank"}
								%i.mdi.mdi-github-circle
						%li.icon
							%a{href: "https://github.com/dcdeiv/simpler-sidebar/releases/latest", target: "_blank"}
								%i.mdi.mdi-package-down
						%li.icon
							%i#toggle-sidenav.mdi.mdi-menu
		.pure-g.toolbar-header
			.pure-u-1
				%h1 simpler-sidebar
				%p= current_page.data.description

	.main
		.section#guide
			%p Press the <i class="mdi mdi-menu"></i> icon in the top #{current_page.data.align} corner of this page to run simpler-sidebar.</p>

		= yield

	%div{id: '#sidenav', :class => "sidenav sidenav-#{current_page.data.align}"}
		.sidenav-wrapper
			%header.sidenav-header simpler-sidebar

			%nav.sidenav-menu
				%ul
					%li
						%a{href: '#download'} Download
					%li
						%a{href: '#getting-started'} Getting Started
					%li
						%a{href: '#options'} Options
						%ul
							%li
								%a{href: '#options-list'} Options List
					%li
						%a{href: '#contributing'} Contributing
					%li
						%a{href: '#release-history'} Release History
					%li
						%a{href: '#license'} License
			%nav.sidenav-menu
				%header.sidenav-menu-header Demos
				%ul
					%li
						%a{href: "http://dcdeiv.github.io/simpler-sidebar/right"} Right
					%li
						%a{href: "http://dcdeiv.github.io/simpler-sidebar/right-top"} Right-Top
					%li
						%a{href: "http://dcdeiv.github.io/simpler-sidebar/left"} Left
					%li
						%a{href: "http://dcdeiv.github.io/simpler-sidebar/left-top"} Left-top

	= javascript_include_tag :googleanalytics
	%script{src: 'https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js'}
	%script{src: 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js'}
	%script{src: 'http://dcdeiv.github.io/simpler-sidebar/bower_components/simpler-sidebar/dist/jquery.simpler-sidebar.min.js'}

	:javascript
		$('#sidenav').simplerSidebar({
			opener: '#toggle-sidenav',
			top: #{current_page.data.top},
			animation: {
				easing: 'easeOutQuint'
			},
			sidebar: {
				align: '#{current_page.data.align}',
				width: 320,
				closingLinks: 'a',
				css: {
					zIndex: 3000
				}
			}
		});
